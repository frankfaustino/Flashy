{
  "name": "flashy",
  "version": "1.0.0",
  "description": "Flash Card App",
  "main": "index.js",
  "scripts": {
    "start": "dotenv -- nodemon -e ts,graphql -x ts-node --files src/index.ts",
    "deploy": "prisma deploy",
    "gen-schema-types": "gql2ts src/schemas/schema.graphql -o src/types/schema.d.ts",
    "test": "jest --detectOpenHandles --forceExit",
    "test-watch": "jest --watch",
    "start:server-test": "dotenv -- ts-node --files src/index.ts",
    "ci": "start-test start:server-test http://localhost:9999 test"
  },
  "author": "Frank Faustino",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.3.1",
    "bcrypt": "^3.0.2",
    "graphql": "^14.0.2",
    "graphql-import": "^0.7.1",
    "graphql-middleware": "^3.0.0",
    "graphql-request": "^1.8.2",
    "graphql-shield": "^5.0.1",
    "graphql-tools": "^4.0.3",
    "jsonwebtoken": "^8.4.0",
    "prisma-client-lib": "^1.23.2",
    "yup": "^0.26.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^23.3.10",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/yup": "^0.26.3",
    "dotenv": "^6.2.0",
    "dotenv-cli": "^1.4.0",
    "gql2ts": "^1.10.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "start-server-and-test": "^1.7.11",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "nodemonConfig": {
    "ignore": [
      "__tests__/*",
      "*.test.ts"
    ]
  }
}
